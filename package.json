{
  "author": "M.C. van den Boogaart <scola@kvdb.name>",
  "description": "Scola CLI",
  "license": "MIT",
  "main": "./dist/cli.cjs.js",
  "module": "./index.js",
  "name": "@scola/cli",
  "repository": "github:scola84/cli",
  "version": "1.3.5",
  "bin": {
    "scola": "./dist/cli.cjs.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build:dev": "npm run clean && rimraf node_modules/@scola && rollup -cmw",
    "build:prod": "npm run clean && rollup -c",
    "clean": "rimraf node_modules/ package-lock.json && npm install",
    "format": "glob-run js-beautify -r 'src/**/*.{css,js}' && npx standard --fix",
    "git:pkg": "git add CHANGELOG.md LICENSE.md package-lock.json package.json",
    "git:src": "git add src/",
    "preversion": "npm run format && npm run git:src",
    "version": "npm run build:prod && npm run git:pkg"
  },
  "devDependencies": {
    "glob-run": "^0.1.7",
    "rimraf": "^3.0.0",
    "rollup": "^1.21.2"
  },
  "dependencies": {
    "@scola/doc": "^1.0.14",
    "@scola/dom": "^1.0.11",
    "@scola/worker": "^3.5.0",
    "commander": "^3.0.1",
    "find-up": "^4.1.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.4",
    "handlebars": "^4.2.0",
    "handlebars-helpers": "^0.10.0",
    "js-beautify": "^1.10.2",
    "lodash-es": "^4.17.15",
    "qs": "^6.8.0",
    "recursive-readdir": "^2.2.2",
    "source-map-support": "^0.5.13",
    "standard": "^14.1.0"
  }
}
